<h1>Lista de Contatos</h1>
<%= render 'formpesquisa' %>
<br>

<%= link_to 'Novo contato', new_contato_path %>
<hr>

<% if @contatos.any?  %>
    <table class="tabela_lista">
        <thead>
            <tr>
                <th class='colunaID'>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Fone principal</th>
                <th></th>
                <th> <%= image_tag 'page_edit.png' %> </th>
                <th> <%= image_tag 'cancel.png' %> </th>
            </tr>
        </thead>
        <tbody>
            <% @contatos.each do |contatos|  %>
                <tr id="linha_<%= contatos.id %>">
                    <td class="dadosColunaID"><%= contatos.id %></td>
                    <td><%= link_to(contatos.nome, contato_path(contatos.id)) %></td>
                    <td><%= contatos.email %></td>
                    <td><%= contatos.numero %></td>
                    <td> <%= link_to(image_tag('lupa.png', class: :lupa), contato_telefones_path(contatos.id), remote: true) %> </td>
                    <td><%= link_to('Editar', edit_contato_path(contatos.id)) %></td>
                    <td><%= link_to('Excluir', contato_path(contatos.id), method: :delete, confirm: 'Vocẽ tem certeza que deseja excluir ?') %></td>
                </tr>
            <% end  %>
        </tbody>
    </table>
<% else  %>
    <% if @via_pesquisa == 0 %>
        <h2> Não há contatos cadastrados para o usuário logado. </h2>
    <% else  %>
        <h2> Não foi localizado nenhum contato pela pesquisa executada. </h2>
    <% end %>
<% end  %>

<hr>
<br>


<div>
    <%= link_to 'Retornar usuários', usuarios_path, class: 'botaoUsuarios'  %>
    <%= link_to 'Sair do sistema', logout_path, class: 'botaoCancelar'  %>
</div>


